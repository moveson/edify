<%= turbo_frame_tag :filter_and_search do %>
  <turbo-stream target="members_and_pager" action="replace">
    <template>
      <%= render partial: "members_and_pager", locals: { members: @members, pagy: @pagy } %>
    </template>
  </turbo-stream>

  <turbo-stream target="members_count" action="replace">
    <template>
      <%= render partial: "member_count", locals: { pagy: @pagy } %>
    </template>
  </turbo-stream>

  <turbo-stream target="sort_and_filter_dropdowns" action="replace">
    <template>
      <%= render partial: "sort_and_filter_dropdowns", locals: { q: @q } %>
    </template>
  </turbo-stream>
<% end %>
