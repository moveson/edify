


<div class="row">
  <div class="col-sm-6">
    <h1>Members</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_member_path, class: 'btn btn-primary' do %>
    Add New Member
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    
        <th>Name</th>
    

            <th>Gender</th>
            <th>Birthdate</th>
            <th>Phone</th>
            <th>Email</th>
            
      </tr>
    </thead>

    <tbody>
      <% @members.each do |member| %>
        <%= content_tag :tr, id: dom_id(member), class: dom_class(member) do %>
          
            <td><%= link_to member.name, member %></td>
          

                      <td><%= member.gender %></td>
                      <td><%= member.birthdate %></td>
                      <td><%= member.phone %></td>
                      <td><%= member.email %></td>
          
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
