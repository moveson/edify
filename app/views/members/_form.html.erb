<%= form_with(model: member) do |form| %>
  <% if member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% member.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
      <%= form.text_field :name, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :gender, class: 'form-label' %>
      <%= form.number_field :gender, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :birthdate, class: 'form-label' %>
      <%= form.date_field :birthdate, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :phone, class: 'form-label' %>
      <%= form.text_field :phone, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <%= form.label :email, class: 'form-label' %>
      <%= form.text_field :email, class: 'form-control' %>
    </div>

  <div class="mb-3">
    <% if member.persisted? %>
      <div class="float-end">
        <%= link_to 'Destroy', member, method: :delete, class: "text-danger", data: { confirm: 'Are you sure?' } %>
      </div>
    <% end %>

    <%= form.submit class: 'btn btn-primary' %>

    <% if member.persisted? %>
      <%= link_to "Cancel", member, class: "btn btn-link" %>
    <% else %>
      <%= link_to "Cancel", members_path, class: "btn btn-link" %>
    <% end %>
  </div>
<% end %>
