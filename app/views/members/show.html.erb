<div class="page-header">
  <%= link_to edit_member_path(@member), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1><%= @member.name %></h1>
</div>

<dl class="dl-horizontal">
  <dt>Gender:</dt>
  <dd><%= @member.gender %></dd>
  <dt>Birthdate:</dt>
  <dd><%= @member.birthdate %></dd>
  <dt>Phone:</dt>
  <dd><%= @member.phone %></dd>
  <dt>Talks:</dt>
  <dd>
    <% @member.talks.each do |talk| %>
    <p><%= [talk.date, talk.purpose, talk.topic].compact.join(" / ") %></p>
    <% end %>
  </dd>
</dl>
