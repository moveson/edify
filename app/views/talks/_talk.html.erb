<%= turbo_frame_tag "meeting_#{talk.meeting_id}_talk_#{talk.id}" do %>
  <div class="d-flex justify-content-center">
    <div class="card bg-light mt-2 w-100" style="max-width: 700px;">
      <div class="card-header">
        <div class="row pt-2">
          <h5 class="col font-weight-bold">
            <% if talk.member_id? %>
              <%= link_to fa_icon("person"), member_path(talk.member_id), target: "_top" %>&nbsp
            <% end %>
            <%= talk.speaker_name %>
          </h5>
          <h6 class="col-3 text-end">
            <%= link_to fa_icon("calendar-alt"), meeting_path(talk.meeting), target: "_top" %>&nbsp
            <%= l(talk.date, format: :rfc822) %>
          </h6>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h6><%= "Purpose: #{talk.purpose}" %></h6>
            <h6><%= "Topic: #{talk.topic_truncated}" %></h6>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
