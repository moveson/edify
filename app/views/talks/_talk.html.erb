<%= turbo_frame_tag dom_id(talk) do %>
  <div class="d-flex justify-content-center">
    <div class="card bg-light mt-2 w-100" style="max-width: 700px;">
      <div class="card-header">
        <div class="row pt-2">
          <h5 class="col font-weight-bold">
            <% if talk.member_id? %>
              <%= link_to fa_icon("person"), member_path(talk.member_id), target: "_top" %>&nbsp
            <% end %>
            <%= talk.speaker_name %>
          </h5>
          <h6 class="col-3 text-end"><%= l(talk.date, format: :rfc822) %></h6>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col">
            <h6><%= "Purpose: #{talk.purpose}" %></h6>
            <h6><%= "Topic: #{talk.topic_truncated}" %></h6>
          </div>
          <div class="col-3 col-md-2 text-center">
            <%= link_to_talk_edit(talk, class: "mt-1 mt-md-2") %>
            <%= link_to_talk_delete(talk, class: "mt-1 mt-md-2") %>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
