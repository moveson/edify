<div class="d-flex justify-content-center ">
  <div class="card bg-light mt-2 w-100" style="max-width: 700px;">
    <div class="card-body">
      <%= form_with model: unit do |form| %>
        <% if unit.errors.any? %>
          <div id="error_explanation">
            <ul>
              <% unit.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row mb-2">
          <div class="col-12">
            <%= form.label :name, class: "required" %>
            <%= form.text_field :name, class: "form-control", autofocus: true, placeholder: "My Amazing Ward" %>
          </div>
        </div>
        <br/>
        <div class="row">
          <div class="col">
            <%= button_tag "Create Ward", type: "submit", class: "btn btn-lg btn-primary" %>
          </div>
          <div class="col text-end">
            <%= link_to fa_icon("arrow-left", text: " Go back"), onboard_path, class: "btn btn-lg btn-outline-primary" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
