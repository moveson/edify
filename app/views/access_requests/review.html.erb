<div class="row">
  <div class="col-md">
    <h2 class="mt-md-4 mt-2"><strong><%= "Review Access Request" %></strong></h2>
  </div>
</div>

<hr/>

<p>
  <strong><%= "#{@access_request.user_name} has requested access to your ward. Please choose one of the options below." %></strong>
</p>

<div class="d-flex justify-content-center">
  <div class="card bg-light mt-2 w-100" style="max-width: 700px;">
    <div class="card-header">
      <h4>Accept the Request</h4>
    </div>
    <div class="card-body">
      <%= form_with(url: approve_access_request_path(@access_request), method: :put, data: { turbo: false }) do |form| %>
        <div class="row mb-2">
          <h6><%= "I know #{@access_request.user_name}, and he or she has a legitimate need for access to Edify for the #{current_unit.name} in the following capacity:" %></h6>
        </div>

        <div class="row mb-2">
          <div class="col-12 col-md-3">
            <%= form.select :role, select_options_for_user_role, { prompt: "Select a role" }, class: "form-select form-control" %>
          </div>
        </div>
        <div class="text-end">
          <%= form.submit "Approve", class: "btn btn-sm btn-success" %>
          <%= link_to "Cancel", users_path, class: "btn btn-sm btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center">
  <div class="card bg-light mt-2 w-100" style="max-width: 700px;">
    <div class="card-header">
      <h4>Reject the Request</h4>
    </div>
    <div class="card-body">
      <div class="row mb-2">
        <h6><%= "I do not know #{@access_request.user_name}, or he or she has no need for access to Edify for the #{current_unit.name}." %></h6>
      </div>
      <div class="text-end">
        <%= link_to_access_request_reject(@access_request) %>
      </div>
    </div>
  </div>
</div>
